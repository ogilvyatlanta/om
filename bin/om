#!/usr/bin/env node
'use strict';

var nopt = require('nopt');
var _ = require('lodash');
var colors = require('colors');
var pkg = require('../package.json');
var log = require('../lib/util/log');

var opts = nopt({
	help: Boolean,
},{
	h: '--help',
	v: '--version'
});
var args = opts.argv.remain;
var cmd = args[0];

function init() {
	var env = require('../lib')();

	if (!cmd && opts.help) {
		return log.help();
	}

	env.run(args, cmd);
}

function pre() {
		
	if(opts.version) {
		return log.message(pkg.version);
	}

	if(!cmd) {
		opts.help = true;	
	}

	init();
}

pre();

